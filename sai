    <script>
        function nextStep(num) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            // Show current page
            document.getElementById('step' + num).classList.add('active');
            
            // Fireworks/Confetti effect
            confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 }
            });
        }
